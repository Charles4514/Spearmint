<div class="transaction-main-content group">
  <% if @transactions.length > 0 %>
  <div class="transactions">

    <!-- <div class="transactions-header group"> -->
    <h2>Transactions</h2>
    <div class="button"><a href="<%= new_transaction_url %>">
        <button>Add Transaction</button></a></div>
    <!-- </div> -->

    <table class="transactions-table">
      <thead>
        <th>Date</th>
        <th>Description</th>
        <th>Category</th>
        <th>Amount</th>
      </thead>
      <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date.strftime("%b %-d") %></td>
        <td><%= transaction.description %></td>
        <td><%= transaction.category.name %></td>
        <td class="amount-cell">
          <% if transaction.transaction_type == "debit" %>
            &#x2212
          <% end %>
          <%= number_to_currency(transaction.get_dollars) %>
        </td>
        <td>
          <div class="button">
            <a href="<%= edit_transaction_url(transaction) %>">
           <button>Edit Transaction</button></a></div>
        </td>
      </tr>
    <% end %>
      </tbody>
    </table>
  </div>
  <% else %>
    <p>You have no transactions!</p>
  <% end %>
</div>

<script type="application/json" id="transactions-json">
 <%= @posts.to_json.html_safe %>
</script>

<script>
  $(document).ready(function(){
  var transactionsJSON = JSON.parse($("#transactions-json").html());
  Spearmint.initialize(transactionsJSON, $(".transactions"));
  });
</script>














