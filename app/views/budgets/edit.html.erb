<h2>Edit Budget</h2>

<%= render "./forms/budget_form", action: :edit, budget: @budget, categories: @categories %>

<form action="<%= budget_url(@budget) %>" method="post">
  <%= auth_token %>
  <input type="hidden" name="_method" value="delete">
  <div class="submit">
    <input type="submit" value="Delete Budget">
  </div>
</form>