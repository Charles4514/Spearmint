<h2>Budgets</h2>

<% if @budgets.length > 0 %>
  <ul>
    <% @budgets.each do |budget| %>
      <li>
        <div class="budget-listing">
        <h3><%= budget.category.name %></h3>
        <!-- Add fancy bar here eventually! -->
        <p>$<%= budget.calculate_expenditures %> of $<%= budget.amount %></p>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>

<form action="<%= budgets_url %>" method="post">
  <%= auth_token %>
  <div class="input">
  <label for="budget-name">Name</label>
  <input type="text" name="budget[name]" id="budget-name">
  </div>

  <div class="input">
  <label for="budget-amount">Amount</label>
  <input type="number" name="budget[amount]" id="budget-amount">
  </div>

  <!-- probably should hide and automate these -->
  <div class="input">
  <label for="budget-start-date">Start</label>
  <input type="date" name="budget[start_date]" id="budget-start-date">
  </div>

  <div class="input">
  <label fore="budget-end-date">End</label>
  <input type="date" name="budget[end_date]" id="budget-end-date">
  </div>

  <!-- again, check for alternate method -->
  <input type="hidden" name="budget[user_id]" value="<%= current_user.id %>">

  <div class="submit">
  <input type="submit" value="Create Budget">
  </div>
</form>