<!DOCTYPE html>
<html>
<head>
  <title>Spearmint</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if flash[:errors] %>
    <%= flash[:errors] %>
  <% end %>

  <% if signed_in? %>
  <header class="navbar">
    <nav class="group">
      <h1 class="navbar-logo">Spearmint</h1>
      <ul class="navbar-list">
        <li><a href="<%= user_url(current_user) %>">Overview</a></li>
        <li><a href="<%= transactions_url %>">Transactions</a></li>
        <li><a href="<%= budgets_url %>">Budgets</a></li>
        <li><a href="<%= goals_url %>">Goals</a></li>
        <li><form action="<%= session_url %>" method="post">
          <%= auth_token %>
          <input type="hidden" name="_method" value="delete">
          <input type="submit" value="Sign Out" id="sign-out-button">
        </form></li>
      </ul>
    </nav>
  </header>
  <% end %>

  <%= yield %>

</body>
</html>
