<div class="form">
  <form action="<%= goals_url %>" method="post">
    <%= auth_token %>

    <div class="input">
      <label for="goal-name">Name</label>
      <input type="text" name="goal[name]" id="goal-name">
    </div>

    <div class="input">
      <label for="goal-amount">Amount</label>
      <input type="number" step=".01" min="1" name="goal[amount]" id="goal-amount">
    </div>

    <div class="input">
      <label for="goal-monthly-contribution">Monthly Contribution</label>
      <input type="number" step=".01" min="1" name="goal[monthly_contribution]" id="goal-monthly-contribution">
    </div>

    <div class="input">
      <label for="goal-planned-date">Planned Date</label>
      <input type="date" name="goal[planned_date]" id="goal-planned-date">
    </div>

    <div class="select"><label for="goal-account">Account</label>
      <select name="goal[account_id]">
        <% current_user.cash_accounts.each do |cash_account| %>
          <% if cash_account.goal == nil %>
            <option value="<%= cash_account.id %>">
              <%= cash_account.name %>
            </option>
          <% end %>
        <% end %>
      </select>
    </div>

    <div class="submit">
      <input type="submit" value="Add Goal">
    </div>
  </form>
</div>